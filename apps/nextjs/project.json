{
  "name": "nextjs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nextjs",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "postcssConfig": "apps/{your app here}/postcss.config.js",
        "outputPath": "dist/apps/nextjs"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/nextjs"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "nextjs:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "nextjs:build:development",
          "dev": true,
          "port": 3000
        },
        "production": {
          "buildTarget": "nextjs:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "nextjs:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/nextjs/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/nextjs/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}
